generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}
model User {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  name             String?
  email            String      @unique
  phone            String      @unique
  password         String      @unique

  image            String?
  bookedVisits     Json[]
  favResidenciesID String[]    @db.ObjectId
}

model BookVisit {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  date     String
  phone    String
  city     String
  propertyId String
}


model Residency {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    price       Int
    address     String
    city        String
    type        String
    country     String
    images      Json
    facilities  Json
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt

    @@unique(fields: [address])
}
